from mcp.server import Server
from config import load_config
import jira, jenkins, sonar, bitbucket, contrast

server = Server("devsecops-mcp")
config = load_config()

@server.tool()
def jira_issue(issue_key: str) -> dict:
    """Fetch Jira issue details"""
    return jira.get_issue(config, issue_key)

# (More tools will be added here next)

server.run()